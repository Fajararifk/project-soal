generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role     @default(SISWA)
  createdAt     DateTime @default(now())
}


enum Role {
  SISWA
  ADMIN
}

model QuizResult {
  id           Int      @id @default(autoincrement())
  userId       Int
  correctAnswers Int
  wrongAnswers   Int
  quizScore    Int
  createdAt     DateTime @default(now())  
  counterInsert  Int
}

model Question {
  id           Int      @id @default(autoincrement())
  question     String? @db.Text
  answers      String[]
  correctAnswer String
  imageUrl      String? @db.Text 
  image         String? @db.Text 
  createdAt     DateTime @default(now())
}